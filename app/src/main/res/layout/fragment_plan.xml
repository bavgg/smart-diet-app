<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_constraintTop_toTopOf="parent">

    <!-- Target calories -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="40dp">

        <!-- Circular progress indicator      -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:orientation="vertical">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_circular"
                style="@style/Widget.Material3.CircularProgressIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:indicatorColor="@color/primary"
                app:indicatorSize="70dp"
                app:trackColor="@color/gray"
                app:trackThickness="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/current_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / " />

                <TextView
                    android:id="@+id/goal_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" kcal" />
            </LinearLayout>
        </LinearLayout>


        <!--        Macros-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--        Protein-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- "Fat" starts at the left -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein" />

                    <!-- Push "0 / 2000 kcal" to the right -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end">  <!-- Align content to the right -->

                        <TextView
                            android:id="@+id/protein_current_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / " />

                        <TextView
                            android:id="@+id/protein_goal_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" g" />
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    style="@style/Widget.Material3.CircularProgressIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:indicatorColor="@color/primary"
                    app:indicatorSize="40dp"
                    app:trackColor="@color/gray"
                    app:trackThickness="5dp" />
            </LinearLayout>

            <!--        Fat-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- "Fat" starts at the left -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs" />

                    <!-- Push "0 / 2000 kcal" to the right -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end">  <!-- Align content to the right -->

                        <TextView
                            android:id="@+id/carbs_current_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / " />

                        <TextView
                            android:id="@+id/carbs_goal_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" g" />
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    style="@style/Widget.Material3.CircularProgressIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:indicatorColor="@color/primary"
                    app:indicatorSize="40dp"
                    app:trackColor="@color/gray"
                    app:trackThickness="5dp" />
            </LinearLayout>

            <!--        Fat-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- "Fat" starts at the left -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat" />

                    <!-- Push "0 / 2000 kcal" to the right -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="end">  <!-- Align content to the right -->

                        <TextView
                            android:id="@+id/fat_current_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / " />

                        <TextView
                            android:id="@+id/fat_goal_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="52" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" g" />
                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    style="@style/Widget.Material3.CircularProgressIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:indicatorColor="@color/primary"
                    app:indicatorSize="40dp"
                    app:trackColor="@color/gray"
                    app:trackThickness="5dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <!-- Breakfast -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Breakfast"
        android:textSize="22dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBreakfastMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Lunch -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="16dp"
        android:text="Lunch"
        android:textSize="22dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLunchMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Dinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="16dp"
        android:text="Dinner"
        android:textSize="22dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDinnerMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>