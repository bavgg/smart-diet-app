<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="match_parent">

    <TextView
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="142dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dietary Preferences &amp; Restrictions"/>
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />



    <com.jg.dietapp.CustomSelect

        android:layout_marginVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/currentWeightSelector"
        app:title="Dietary Preference"
        app:icon="@drawable/baseline_fastfood_16"
        app:selectValue="Select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.jg.dietapp.CustomSelect

        android:layout_marginVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/goalWeightSelector"
        app:title="Food Restrictions"
        app:icon="@drawable/baseline_do_not_disturb_16"
        app:selectValue="Select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.jg.dietapp.CustomSelect

        android:layout_marginVertical="4dp"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/speedSelector"
        app:title="Meal Timing Preference"
        app:icon="@drawable/baseline_access_time_filled_16"
        app:selectValue="Select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/createMyPlanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Create My Plan"
        />

</LinearLayout>
